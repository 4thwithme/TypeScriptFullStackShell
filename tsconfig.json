{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "baseUrl": "./",
    "outDir": "./temp",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./src/start.ts",
    "./src/DemoServer.ts",
    "./src/controllers/**/*.ts"
  ],
  "exclude": [
    "./src/controllers/**/*.test.ts",
    "**/node_modules/",
    "./src/public/"
  ]
}
